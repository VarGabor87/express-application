<div class="col-4 p-3 m-3 mx-auto bg-dark text-white">
  <form method="POST" action="/admin/products">
    <div class="form-group">
      <label>Name:</label>
      <input name="name" type="text" class="form-control" id="exampleInputEmail1"  placeholder="Name">
    </div>
    <div class="form-group">
      <label>Description:</label>
      <input name="description" type="text" class="form-control" id="exampleInputEmail1"  placeholder="Description">
    </div>
    <div class="form-group">
      <label>Price:</label>
      <input name="price" type="text" class="form-control" id="exampleInputEmail1" placeholder="Price">
    </div>
    <div class="form-group">
      <label>On stock:</label>
      <input name="onStock" type="text" class="form-control" id="exampleInputEmail1" placeholder="On stock">
    </div>

    <div class="form-group">
      <label>Category:</label>
      <select class="ui dropdown" name="id">
        <option value="">Select a category...</option>
          {{#each categories}}
              <option value="{{id}}">{{name}}</option>
          {{/each}}
      </select>
    </div>
    
    
    <button class="btn btn-success my-2 my-sm-3" type="submit">Send</button>
  </form>
</div>
