    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <img src="/images/sofa.jpg" class="img-responsive" id="image">
        </div>
        <div class="col-md-6">
            <h3 class="font-weight-bold"><u></u><br/>{{product.name}}</h3>
            <h4><u></u><br/>{{product.price}} Ft</h4>
            <p><u></u><br/>{{product.description}}</p>
        </div>
      </div>
