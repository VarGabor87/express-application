<div class="col-4 p-3 m-3 mx-auto bg-dark text-white">
<form method="POST" action="/users">
  <div class="form-group">
    <label>Username:</label>
    <input name="username" type="text" value="{{user.username}}"class="form-control">
  </div>
	<div class="form-group">
  	<label>Password:</label>
  	<input id="password" value="{{user.encryptedPassword}}" class="form-control" name="encryptedPassword" type="password" required>
	</div>
<button class="btn btn-success my-2 my-sm-3" type="submit">Login</button>
</form>
</div>
