<div class="col-4 p-3 m-3 mx-auto bg-dark text-white">
<form method="POST" action="/admin/orders/{{order.id}}?_method=put">
 <div class="btn-group col-md-1 ml-1"><h4>ID: {{order.id}}</h4></div>
  <div class="form-group">
    <label for="">Status:</label>
    <input name="status" type="text" value="{{order.status}}" class="form-control">
  </div>
  <div class="form-group">
    <label for="">User ID:</label>
    <input name="price" type="text" value="{{order.userId}}" class="form-control">
  </div>
  <button class="btn btn-success my-2 my-sm-0" type="submit">Edit</button>
</form>
</div>
